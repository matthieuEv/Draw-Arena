/* CODED BY CLAUDE OPUS 4.5 */

/* Profil Page Styles */

.profil-page {
    max-width: 700px;
    margin: 0 auto;
}

/* Header avec avatar */
.profil-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, rgba(90, 175, 232, 0.08), rgba(247, 166, 89, 0.05));
    border-radius: 16px;
    border: 1px solid var(--color-light-gray);
    margin-bottom: 1.5rem;
}

.profil-avatar-container {
    position: relative;
    flex-shrink: 0;
}

.profil-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--color-primary-500);
    background: var(--color-light-gray);
}

.profil-avatar-edit {
    position: absolute;
    bottom: 4px;
    right: 4px;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--color-primary-500);
    color: #fff;
    border: 2px solid #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.profil-avatar-edit:hover {
    background: var(--color-primary-600);
    transform: scale(1.1);
}

.profil-avatar-edit .material-symbols-rounded {
    font-size: 1rem;
}

.profil-info {
    flex: 1;
    min-width: 0;
}

.profil-info h1 {
    margin: 0 0 0.25rem 0;
    font-size: 1.5rem;
    color: var(--color-text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.profil-info p {
    margin: 0 0 0.5rem 0;
    color: var(--color-text-muted);
    font-size: 0.9rem;
}

.profil-role-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    background: var(--color-primary-100);
    color: var(--color-primary-600);
}

.profil-role-badge.administrateur {
    background: linear-gradient(135deg, rgba(249, 86, 113, 0.2), rgba(249, 86, 113, 0.1));
    color: #d64560;
}

.profil-role-badge.president {
    background: linear-gradient(135deg, rgba(255, 193, 7, 0.2), rgba(255, 193, 7, 0.1));
    color: #b38600;
}

.profil-role-badge.directeur {
    background: linear-gradient(135deg, rgba(247, 166, 89, 0.2), rgba(247, 166, 89, 0.1));
    color: #c67a2e;
}

.profil-role-badge.evaluateur {
    background: linear-gradient(135deg, rgba(23, 162, 184, 0.2), rgba(23, 162, 184, 0.1));
    color: #117a8b;
}

.profil-role-badge .material-symbols-rounded {
    font-size: 1rem;
}

/* Message feedback */
.profil-message {
    padding: 0.875rem 1rem;
    border-radius: 10px;
    margin-bottom: 1rem;
    display: none;
    font-size: 0.9rem;
}

.profil-message.success {
    background: rgba(40, 167, 69, 0.1);
    color: #1e7e34;
    border: 1px solid rgba(40, 167, 69, 0.2);
    display: block;
}

.profil-message.error {
    background: rgba(220, 53, 69, 0.1);
    color: #bd2130;
    border: 1px solid rgba(220, 53, 69, 0.2);
    display: block;
}

/* Form cards */
.profil-form-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 16px;
    border: 1px solid var(--color-light-gray);
    padding: 1.5rem;
    margin-bottom: 1rem;
}

.profil-form-card h2 {
    margin: 0 0 1.25rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text);
}

.profil-form-card h2 .material-symbols-rounded {
    font-size: 1.25rem;
    color: var(--color-primary-500);
}

/* Form */
.profil-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.profil-field-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.profil-field {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
}

.profil-field label {
    font-weight: 500;
    color: var(--color-text);
    font-size: 0.85rem;
}

.profil-field input {
    padding: 0.7rem 0.9rem;
    border: 1px solid var(--color-light-gray);
    border-radius: 10px;
    font-size: 0.95rem;
    background: #fff;
    color: var(--color-text);
    transition: border-color 0.2s, box-shadow 0.2s;
}

.profil-field input:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px var(--color-primary-100);
}

.profil-field input:disabled {
    background: var(--color-light-gray);
    color: var(--color-text-muted);
    cursor: not-allowed;
}

/* Actions */
.profil-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    margin-top: 0.5rem;
    flex-wrap: wrap;
}

.profil-btn {
    padding: 0.65rem 1.25rem;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    transition: all 0.2s ease;
    border: none;
}

.profil-btn .material-symbols-rounded {
    font-size: 1.1rem;
}

.profil-btn-primary {
    background: var(--color-primary-500);
    color: #fff;
}

.profil-btn-primary:hover {
    background: var(--color-primary-600);
    transform: translateY(-1px);
}

.profil-btn-secondary {
    background: transparent;
    color: var(--color-text);
    border: 1px solid var(--color-light-gray);
}

.profil-btn-secondary:hover {
    background: var(--color-light-gray);
}

.profil-btn-danger {
    background: #dc3545;
    color: #fff;
}

.profil-btn-danger:hover {
    background: #c82333;
}

/* Responsive */
@media (max-width: 600px) {
    .profil-header {
        flex-direction: column;
        text-align: center;
        padding: 1.25rem;
    }
    
    .profil-info h1 {
        font-size: 1.25rem;
    }
    
    .profil-field-row {
        grid-template-columns: 1fr;
    }
    
    .profil-actions {
        justify-content: stretch;
    }
    
    .profil-btn {
        flex: 1;
        justify-content: center;
    }
}
