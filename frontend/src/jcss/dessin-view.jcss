/* Dessin View - Full screen image display */

.dessin-view-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    display: flex;
    flex-direction: column;
    z-index: 1000;
}

.dessin-view-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.back-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    color: #fff;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
}

.back-button:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateX(-4px);
}

.dessin-info {
    text-align: center;
    color: #fff;
}

.dessin-info h2 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
}

.dessin-info p {
    margin: 0.25rem 0 0;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
}

.dessin-actions {
    display: flex;
    gap: 0.75rem;
}

.action-btn {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    color: #fff;
    cursor: pointer;
    transition: all 0.2s ease;
}

.action-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.05);
}

.dessin-view-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    overflow: hidden;
}

.dessin-container {
    max-width: 90%;
    max-height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5);
}

.dessin-container img {
    max-width: 100%;
    max-height: 70vh;
    object-fit: contain;
    border-radius: 12px;
}

.dessin-view-footer {
    padding: 1.5rem 2rem;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
}

.dessin-details {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
}

.detail-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
}

.detail-item .material-symbols-rounded {
    font-size: 1.25rem;
    color: var(--color-primary-500, #5AAFE8);
}

.dessin-comment {
    margin-top: 1.5rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.dessin-comment h4 {
    margin: 0 0 0.5rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.dessin-comment p {
    margin: 0;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
}

/* Fullscreen mode */
.dessin-container:fullscreen {
    background: #000;
    max-width: 100%;
    max-height: 100%;
    border-radius: 0;
}

.dessin-container:fullscreen img {
    max-height: 100vh;
    border-radius: 0;
}

/* Responsive */
@media (max-width: 768px) {
    .dessin-view-header {
        padding: 1rem;
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .dessin-info {
        order: -1;
        width: 100%;
    }
    
    .dessin-view-content {
        padding: 1rem;
    }
    
    .dessin-details {
        gap: 1rem;
    }
}
