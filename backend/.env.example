# Environment variables for Draw Arena Backend

# Application
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_ENV=development

# Database
DB_HOST=db
DB_PORT=3306
DB_NAME=name_of_your_database
DB_USER=username_for_your_database
DB_PASS=password_for_your_database

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRY=3600

# CORS
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Azure Storage
STORAGE_ACCOUNT_NAME=name_of_your_storage_account
STORAGE_ACCOUNT_KEY=your_storage_account_key
STORAGE_BLOB_ENDPOINT=endpoint_url_for_your_blob_storage
STORAGE_PUBLIC_BASE_URL=base_url_for_public_access
STORAGE_CONTAINER=container_name_for_post_images
